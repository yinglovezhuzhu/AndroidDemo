<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/btn_ui_low_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationY="5dp"
        android:elevation="5dp"
        android:text="调暗系统栏和导航栏"/>
    <Button
        android:id="@+id/btn_ui_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ui_low_profile"
        android:text="显示系统栏和导航栏"/>
    <Button
        android:id="@+id/btn_ui_hide_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ui_show"
        android:text="隐藏系统状态栏"/>
    <Button
        android:id="@+id/btn_ui_show_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ui_hide_status_bar"
        android:text="显示系统状态栏"/>
    <Button
        android:id="@+id/btn_ui_behind_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ui_show_status_bar"
        android:text="内容显示在系统状态栏后面"/>
    <Button
        android:id="@+id/btn_ui_hide_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ui_behind_status_bar"
        android:text="隐藏系统导航栏"/>
    <Button
        android:id="@+id/btn_ui_full_screen_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ui_hide_navigation_bar"
        android:text="全屏（向后倾斜）"/>
    <Button
        android:id="@+id/btn_ui_full_screen_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ui_full_screen_1"
        android:text="全屏（沉浸模式）"/>
    <Button
        android:id="@+id/btn_ui_full_screen_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ui_full_screen_2"
        android:text="全屏（粘贴沉浸模式）"/>



</androidx.constraintlayout.widget.ConstraintLayout>